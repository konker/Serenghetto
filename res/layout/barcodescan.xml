<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        >
        <TextView
            android:text="@string/titleBarcodeCode"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:paddingBottom="4dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@id/textBarcodeCode"
            android:text=""
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        >
        <TextView
            android:text="@string/titleBarcodeTime"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:paddingBottom="4dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@id/textBarcodeTimeReadable"
            android:text=""
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            />
        <TextView
            android:id="@id/textBarcodeTime"
            android:text=""
            android:layout_width="0dip" 
            android:layout_height="0dip" 
            android:visibility="invisible"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        >
        <TextView
            android:text="@string/titleBarcodeLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            />
        <com.google.android.maps.MapView
            android:id="@id/mapBarcodeLocation"
            android:layout_width="fill_parent"
            android:layout_height="125dp"
            android:clickable="false"
            android:apiKey="0Hkd6gl7IVP14c1Qyt9ctxeo9Sc0xgIVlQ0QBHg"
            />
        <TextView
            android:id="@id/textBarcodeLocationLatitude"
            android:text=""
            android:layout_width="0dip" 
            android:layout_height="0dip" 
            android:visibility="invisible"
            />
        <TextView
            android:id="@id/textBarcodeLocationLongitude"
            android:text=""
            android:layout_width="0dip" 
            android:layout_height="0dip" 
            android:visibility="invisible"
            />
        <TextView
            android:id="@id/textBarcodeLocationAccuracy"
            android:text=""
            android:layout_width="0dip" 
            android:layout_height="0dip" 
            android:visibility="invisible"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        >
        <TextView
            android:text="@string/titleBarcodeName"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:paddingBottom="4dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@id/inputBarcodeName"
            android:hint="@string/hintBarcodeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="255"
            />
        <TextView
            android:id="@id/textBarcodeName"
            android:text=""
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="16dp"
        android:gravity="center"
        >
        <Button
            android:id="@id/buttonCancelBarcode"
            android:text="@string/titleCancelBarcode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@id/buttonSaveBarcode"
            android:text="@string/titleSaveBarcode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@id/buttonOKBarcode"
            android:text="@string/titleOKBarcode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>

