<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.hiit.vvb"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:name=".VVBApplication" android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".CodesActivity"
                  android:label="@string/app_name"/>
        <activity android:name=".PrefsActivity"
                  android:label="@string/app_name"/>
        <activity android:name=".LoggedOutActivity"
                  android:label="@string/app_name"/>

        <service android:name=".UpdatesService" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> 
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> 
</manifest> 
